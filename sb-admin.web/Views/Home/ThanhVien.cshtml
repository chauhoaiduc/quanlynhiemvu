@section scripts
{
    <script src="~/Scripts/datatables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-notify/0.2.0/js/bootstrap-notify.js"></script>
    <script src="~/Scripts/dist/jquery.validate.js"></script>
    <script src="~/Scripts/datepicker.js"></script>
    <script src="~/Scripts/summernote.js"></script>
    <script>

        $(document).ready(function () {

            $('.summernote').summernote({
                height: 300,                 // set editor height
                minHeight: 300,             // set minimum height of editor
                maxHeight: null,             // set maximum height of editor
                focus: true                  // set focus to editable area after initializing summernote
            });

        });
        var dataTable = $('#example').DataTable();
        var dataTable1 = $('#example1').DataTable();
        var dataTable3 = $('#example3').DataTable();
        var dataTable4 = $('#example4').DataTable();
        $(document).ready(function () {

            //Xóa đi dòng cũ của datatable đã khai báo
            dataTable
                .clear()
                .draw();
            $.ajax({
                type: "post",
                dataType: "json",
                url: "@Url.Action("LayThongTinThanhVien", "Home")",
                success: function (res) {
                    debugger;
                    for (let i = 0; i < res.length; i++) {
                        if (res[i].iHoatDong == 0)
                        {
                            dataTable.row.add([
                            '' + res[i].vTenDangNhap + '',
                            '<input onclick="LayNhiemVuDaHoanThanh(' + res[i].iMaThanhVienCode + ')"  type="button"  class="btn btn-info btn-block" value="' + res[i].iSoNhiemVuDaHoanThanh + '"  />',
                            '<input onclick="LayNhiemVuDuocGiao(' + res[i].iMaThanhVienCode + ')" type="button"  class="btn btn-info btn-block" value="' + res[i].iSoNhiemVuDuocGiao + '"  />',
                            '<input onclick="LayDanhSachLoi(' + res[i].iMaThanhVienCode + ')" type="button"  class="btn btn-info btn-block" value="' + res[i].iSoLoiPhaiSua + '"  />',
                            'Đang rảnh',
                            '<input type="button" class="btn btn-danger" value="Thêm nhiệm vụ"  />',
                            ]).draw();
                        }
                        else {
                            dataTable.row.add([
                           '' + res[i].vTenDangNhap + '',
                            '<input onclick="LayNhiemVuDaHoanThanh(' + res[i].iMaThanhVienCode + ')"  type="button"  class="btn btn-info btn-block" value="' + res[i].iSoNhiemVuDaHoanThanh + '"  />',
                            '<input onclick="LayNhiemVuDuocGiao(' + res[i].iMaThanhVienCode + ')" type="button"  class="btn btn-info btn-block" value="' + res[i].iSoNhiemVuDuocGiao + '"  />',
                            '<input onclick="LayDanhSachLoi(' + res[i].iMaThanhVienCode + ')" type="button"  class="btn btn-info btn-block" value="' + res[i].iSoLoiPhaiSua + '"  />',
                           'Đang làm',
                           '<input disabled type="button"  class="btn btn-danger" value="Thêm nhiệm vụ"  />',
                            ]).draw();
                        }
                            
                    }
                },
                error: function (data) {
                    alert(data.x);
                }
            });

        });
        function LayDanhSachLoi(id) {
            
            dataTable1
                .clear()
                .draw();
            $('#xemdanhsachloi').modal('show');
            $.ajax({
                type: "post",
                url: "@Url.Action("LayDanhSachLoi", "Home")",
                data: { 'id': id },
            success: function (res) {
                for (let i = 0; i < res.length; i++) {
                    dataTable1.row.add([
                        '' + res[i].vTenNhiemVu + '',
                        '' + res[i].vMoTa + '',
                        '' + res[i].vNguoiDang + '',
                        '' + res[i].vNguoiDuocGiaoCode + '',
                        '<input onclick="ChiTietLoi(' + res[i].iMaNhiemVuCode + ')" type="button" id="' + res[i].iMaNhiemVuCode + '" class="btn btn-danger" value="Xem Lỗi"  />',
                    ]).node().id = 'tr' + res[i].iMaNhiemVuCode + '';
                    dataTable1.draw();
                }
            },
            error: function (data) {
                alert(data.x);
            }
        });
        }
        function ChiTietLoi(id)
        {
            $.ajax({
                type: "post",
                url: "@Url.Action("ChiTietLoi", "Home")",
                data: { 'id': id },
                success: function (res) {
                $('#chitietloi').modal('show');
                $(".note-editable").html('' + res[0].vChiTietLoi + '')
                console.log(res);
            },
            error: function (data) {
                alert(data.x);
            }
        });
        }
        function LayNhiemVuDuocGiao(id) {
            dataTable3
                .clear()
                .draw();
            $('#xemdanhsachnhiemvuduocgiao').modal('show');
            $.ajax({
                type: "post",
                url: "@Url.Action("LayDanhSachNhiemVuduocGiao", "Home")",
                data: { 'id': id },
            success: function (res) {
                for (let i = 0; i < res.length; i++) {
