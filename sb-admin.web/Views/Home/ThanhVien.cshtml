                        '' + res[i].vTenNhiemVu + '',
                        '' + res[i].vMoTa + '',
                        '' + res[i].vNguoiDang + '',
                        '' + res[i].vNguoiDuocGiaoCode + '',
                        '<input onclick="ChiTietNhiemVuDuocGiao(' + res[i].iMaNhiemVuCode + ')" type="button" id="' + res[i].iMaNhiemVuCode + '" class="btn btn-danger" value="Xem chi tiết"  />',
                    ]).draw();
                }
            },
            error: function (data) {
                alert(data.x);
            }
        });
        }
